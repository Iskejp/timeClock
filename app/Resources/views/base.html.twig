<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('css/jqcloud.min.css') }}">
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('css/screen.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}
        
        {% block javascripts %}
            <script src="{{ asset('js/jquery-3.1.1.min.js') }}" type="text/javascript"></script>
            
            {# Time ago in words #}
            <script src="{{ asset('js/jquery.timeago.js') }}" type="text/javascript"></script>           
            <script type="text/javascript">
                jQuery(document).ready(function() {
                  jQuery("time.timeago").timeago();
                });
            </script>
            
            {# Word Cloud #}
            <script src="{{ asset('js/jqcloud.min.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
